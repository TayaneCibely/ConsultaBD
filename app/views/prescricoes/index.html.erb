<h1>Prescrições</h1>

<div id="prescricoes">
  <% if notice.present? %>
    <p style="color: green;"><%= notice %></p>
  <% end %>

  <h2>Busque a prescrição pelo nome do paciente:</h2>
  <%= form_tag search_prescricoes_path, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Buscar" %>
  <% end %>

  <% @prescricoes.each do |prescricao| %>
    <div class="prescription-card">
      <div>Nome do paciente: <%= prescricao.paciente.nome_completo %></div>
      <div>Prescrição: <%= prescricao.descricao %></div>
      <p><%= link_to "Ver detalhes", prescricao, class: "btn" %></p>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "Nova Prescrição", new_prescricao_path, class: "btn" %>
    <%= link_to "Voltar para a página principal", root_path, class: "btn" %>
  </div>
</div>
