<%= form_with(model: prontuario) do |form| %>
  <% if prontuario.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prontuario.errors.count, "error") %> prohibited this prontuario from being saved:</h2>

      <ul>
        <% prontuario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
     <%= form.label :paciente_id %>
     <%= form.collection_select :paciente_id, Paciente.all, :id, :nome_completo, prompt: "Selecione um paciente" %>
  </div>

  <div class="field">
    <%= form.label :dataCriacao, "Data da Criação do Prontuário:", style: "display: block" %>
    <%= form.date_field :dataCriacao %>
  </div>

  <div class="field">
    <%= form.label :codigo, "Código do Prontuário", style: "display: block" %>
    <%= form.text_field :codigo %>
  </div>

  <div class="field">
    <%= form.label :historico, "Histórico do Paciente", style: "display: block" %>
    <%= form.text_area :historico %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar Prontuário" %>
    <%= link_to "Voltar para a página inicial", root_path, class: "btn btn-secondary" %>
  </div>
<% end %>
