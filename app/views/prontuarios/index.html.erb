<h1>Prontuários</h1>

<div id="prontuarios">
  <% if notice.present? %>
    <p style="color: green;"><%= notice %></p>
  <% end %>

  <h2>Busque o prontuário pelo nome do paciente:</h2>
  <%= form_tag search_prontuarios_path, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Buscar" %>
  <% end %>

  <% @prontuarios.each do |prontuario| %>
    <div class="record-card">
      <div>Nome do paciente: <%= prontuario.paciente.nome_completo %></div>
      <div>Prontuário: <%= prontuario.numero %></div>
      <p><%= link_to "Ver detalhes", prontuario, class: "btn" %></p>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "Novo Prontuário", new_prontuario_path, class: "btn" %>
    <%= link_to "Voltar para a página principal", root_path, class: "btn" %>
  </div>
</div>
