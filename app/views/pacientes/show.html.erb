<h1>Detalhes do Paciente</h1>

<div>
  <h2><%= @paciente.nome_completo %></h2>

  <table>
    <tr>
      <th>CPF:</th>
      <td><%= @paciente.cpf %></td>
    </tr>
    <tr>
      <th>Data de Nascimento:</th>
      <td><%= @paciente.data_nascimento %></td>
    </tr>
    <tr>
      <th>Telefone:</th>
      <td><%= @paciente.telefone %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= @paciente.email %></td>
    </tr>
  </table>

  <h2>Endere√ßo</h2>

  <table>
    <tr>
      <th>CEP:</th>
      <td><%= @paciente.endereco.cep %></td>
    </tr>
    <tr>
      <th>Cidade:</th>
      <td><%= @paciente.endereco.cidade %></td>
    </tr>
    <tr>
      <th>Bairro:</th>
      <td><%= @paciente.endereco.bairro %></td>
    </tr>
    <tr>
      <th>Logradouro:</th>
      <td><%= @paciente.endereco.logradouro %></td>
    </tr>
    <tr>
      <th>Complemento:</th>
      <td><%= @paciente.endereco.complemento %></td>
    </tr>
  </table>

  <div>
    <%= link_to 'Editar dados', edit_paciente_path(@paciente), class: "btn" %>
    <%= button_to "Deletar Paciente", @paciente, method: :delete, data: { confirm: "Tem certeza que deseja apagar o paciente?" } %>
    <%= link_to "Sair", pacientes_path %>
  </div>

</div>
