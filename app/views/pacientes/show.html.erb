<h1>Detalhes do Paciente</h1>

<div>
  <h2><%= @paciente.nome_completo %></h2>

  <table>
    <tr>
      <th>CPF:</th>
      <td><%= @paciente.cpf %></td>
    </tr>
    <tr>
      <th>Data de Nascimento:</th>
      <td><%= @paciente.data_nascimento %></td>
    </tr>
    <tr>
      <th>Telefone:</th>
      <td><%= @paciente.telefone %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= @paciente.email %></td>
    </tr>
  </table>

  <h2>Endereço</h2>

  <table>
    <tr>
      <th>CEP:</th>
      <td><%= @paciente.endereco.cep %></td>
    </tr>
    <tr>
      <th>Cidade:</th>
      <td><%= @paciente.endereco.cidade %></td>
    </tr>
    <tr>
      <th>Bairro:</th>
      <td><%= @paciente.endereco.bairro %></td>
    </tr>
    <tr>
      <th>Logradouro:</th>
      <td><%= @paciente.endereco.logradouro %></td>
    </tr>
    <tr>
      <th>Complemento:</th>
      <td><%= @paciente.endereco.complemento %></td>
    </tr>

  </table>
    <% if @paciente.prontuario %>
        <h2>Prontuário</h2>
        <table>
          <tr>
            <th>Data que foi criado:</th>
            <td><%= @paciente.prontuario.datacriacao %></td>
          </tr>
          <tr>
            <th>Código Prontuário<th>
            <td><%= @paciente.prontuario.codigo %></td>
          </tr>
          <tr>
            <th>Histórico Paciente</th>
            <td><%= @paciente.prontuario.historico %></td>
          </tr>
        </table>
      <% end %>

  <div class="links">
    <%= link_to 'Adicionar o Prontuário do Paciente', new_paciente_prontuario_path(paciente_id: @paciente.id), class: "btn" %>
    <%= link_to 'Editar dados', edit_paciente_path(@paciente), class: "btn" %>
    <%= link_to "Voltar para a página inicial", root_path, class: "btn btn-secondary" %>
    <%= button_to "Deletar Paciente", @paciente, method: :delete, data: { confirm: "Tem certeza que deseja apagar o paciente?" }, class: "btn" %>

  </div>

</div>
